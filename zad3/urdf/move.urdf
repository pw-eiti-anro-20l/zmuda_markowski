<?xml version="1.0"?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="props" value="${load_yaml('../urdf_val.yaml')}"/>
    <xacro:property name="l_width" value="0.2"/>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="0.7" radius="0.2"/>
            </geometry>
            <origin xyz="0 0 -0.2"/>
            <material name="blue"/>
        </visual>
    </link>

    <link name="link_1">
        <visual>
            <geometry>
                <box size="${props['i2']['l_len']} ${l_width} ${l_width}"/>
            </geometry>
            <origin xyz="${props['i2']['l_xyz']}" rpy="${props['i2']['l_rpy']}"/>
            <material name="red"/>
        </visual>
    </link>

    <link name="link_2">
        <visual>
            <geometry>
                <box size="${props['i3']['l_len']} ${l_width} ${l_width}"/>
            </geometry>
            <origin xyz="${props['i3']['l_xyz']}" rpy="${props['i3']['l_rpy']}"/>
            <material name="red"/>
        </visual>
    </link>

    <link name="link_3">
        <visual>
            <geometry>
                <cylinder length="0.5" radius="0.04"/>
            </geometry>
            <origin xyz="0 0 1" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
    </link>


    <joint name="base_to_link1" type="revolute">
        <parent link="base_link"/>
        <child link="link_1"/>
        <origin xyz="${props['i1']['j_xyz']}" rpy="${props['i1']['j_rpy']}"/>
        <axis xyz="0 0 1"/>
	<limit effort="1000.0" lower="-3.1415" upper="3.1415" velocity="0.5"/>
    </joint>

    <joint name="link1_to_link2" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>
        <origin xyz="${props['i2']['j_xyz']}" rpy="${props['i2']['j_rpy']}"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
    </joint>

    <joint name="link2_link3" type="prismatic">
    	<parent link="link_2"/>
        <child link="link_3"/>
        <origin xyz="${props['i3']['j_xyz']}" rpy="${props['i3']['j_rpy']}" />
        <axis xyz="0 0 1" />
        <limit effort="1000.0" lower="-0.03" upper="0.25" velocity="0.5"/>
    </joint>
</robot>
